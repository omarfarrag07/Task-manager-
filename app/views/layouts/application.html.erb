<!DOCTYPE html>
<html>
  <head>
    <title>TaskManager</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbo-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbo-track': 'reload', defer: true %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <!-- Navbar -->
    <nav class="navbar">
      <div class="container">
        <a class="navbar-brand" href="<%= root_path %>">TaskManager</a>
        <div class="navbar-nav">
          <%= link_to 'Projects', projects_path, class: 'nav-link' %>
          <%= link_to 'New Project', new_project_path, class: 'nav-link' %>
          <%= link_to 'Profile', edit_user_registration_path, class: 'nav-link' %>
          <%= link_to 'Sign Out',  destroy_user_session_path , method: :delete, class: 'nav-link' %>
        </div>
      </div>
    </nav>

    <!-- Flash messages -->
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <!-- Main content -->
    <%= yield %>
  </body>
</html>
